# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=songs_db

# Songs Data
SONGS_JSON_PATH=songs.json

# Pagination
MAX_PAGE_SIZE=100

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# API Metadata
API_TITLE=Songs API
API_VERSION=1.0.0

# Environment Configuration
ENVIRONMENT=local  # Options: local, development, production

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=text  # Options: text, json (json recommended for production)

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per minute
RATE_LIMIT_STORAGE_URI=memory://  # Use redis:// for production
